

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <div class="questions">
        <% @questions.each do |question| %>
        <div class="question clearfix">

   

          <div class="question-details">
            <span class="question-title"><%= link_to question.title, question %></span>
             <span class="question-description">Realizada por <%= question.user.email %> <%= time_ago_in_words question.created_at %></span>
           
          </div>

          <div class="question-comments">
           <span class="comment-count"><%= question.votes.count %></span>
           <span class="question-description">Votos</span>
          </div>

          <div class="question-comments">
           <span class="comment-count"><%= question.answers.count %></span>
           <span class="question-description">Respuestas</span>
          </div>






             

        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>